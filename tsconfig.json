{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "typings",
    "noImplicitAny": false,
    "jsxImportSource": "@emotion/react"
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}



